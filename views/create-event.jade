extend layout

block mainContent
  .skinny-container
    .top-offset
      if errors
        div(class="form-errors panel panel-danger")
          .panel-heading
            h3(class="panel-title") Please correct the following errors:
          .panel-body
            for error in errors
              li #{error}
    
      .giant
        h1 Let's get this party started...
      
      form#create-event(method='POST')
        h3 Create your ah-shmazing event
        
        label(for='title') Event title:
        input(type='text', name='title', class='form-control', placeholder='Title')
        
        label(for='location') Event location:
        input(type='text', name='location', class='form-control', placeholder='Location')
        
        label(for='image') Event image URL:
        input(type='text', id='image', name='image', class='form-control', placeholder='Online Image URL')
        #add-image-here
          
        h3 Date and Time
        .form-inline.pick-date
          .form-group
            label(for='month') Month:
            select(name='month', id='month', class='form-control date-form', placeholder='Month')
              for monthName, monthNumber in allowedDateInfo.months
                option(value='#{monthNumber}') #{monthName}
          .form-group
            label(for='day') Day:
            select(name='day', id='day', class='form-control date-form')
              for day in allowedDateInfo.days
                option(value='#{day}') #{day}
          .form-group
            label(for='year') Year:
            select(name='year' id='year', class='form-control date-form', placeholder='Year')
              for year in allowedDateInfo.years
                option(value='#{year}') #{year}
          .form-group
            label(for='hour') Hour:
            select(name=  'hour', id='hour', class='form-control date-form')
              for hour in allowedDateInfo.hours
                option(value="#{hour}") #{hour}
          .form-group
            label(for='minute') Minute:
            select(name='minute', class='form-control date-form')
              for minute in allowedDateInfo.minutes
                option(value='#{minute}') #{minute}
        .form-group
          h3 Things to bring
          label(for='items') Things To Bring:
          each val in ["booze", "silverware", "pumpkin pie", "popcorn", "playlist"]
            input(type='text', name='items', onfocus="this.placeholder = ''", class='form-control', placeholder='Remember the #{val}!')
        button.pull-right(id='submit', class='btn btn-universal')
          | Create Event
          i.fa.fa-long-arrow-right(style="margin-left: 5px")
        script(src="/javascripts/createevent.js")

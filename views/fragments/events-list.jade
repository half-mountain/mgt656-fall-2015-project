ul(class="eventlist")
  for event in events
    if event.date >= time
      li(class="event" id="event-#{event.id}")
        | #{event.title}.
        time(datetime="#{event.date}") #{event.date|prettyDate}
        | #{event.attending.length} attending so far.
        a(href="/events/#{event.id}") Click here for more details
